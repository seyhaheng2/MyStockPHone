<div class="panel">
   <div class="panel-body">
      <div class="row">
         <div class="col-sm-6">
            <div class="m-b-30">
               <%= link_to 'New Product  <i class="fa fa-plus"></i>'.html_safe, new_product_path, class: "btn btn-default waves-effect waves-light" %>
            </div>
         </div>
             <div class="pull-right">
                  
  <%= form_tag root_path, method: :get, :id => "lesson_search" do %>
      <%= text_field_tag :query, params[:query], class: "form-control input-sm no-border rounded", placeholder: "Searching...." %>
 <% end %>

               </div>





               
      </div>
      <div class="">
         <div id="datatable-editable_wrapper" class="dataTables_wrapper form-inline dt-bootstrap no-footer">
            <div class="row">
               <div class="col-sm-12">
                  
                      <table class="table table-striped dataTable no-footer" id="datatable-editable">
                        <thead>
                          <tr role="row">
                            <th class="sorting" rowspan="1" colspan="1" style="width: 209px;">Name</th>
                            <th class="sorting" rowspan="1" colspan="1" style="width: 209px;">Imie</th>
                            <th class="sorting" rowspan="1" colspan="1" style="width: 209px;">Price</th>
                            <th class="sorting" rowspan="1" colspan="1" style="width: 209px;">Kind</th>
                            <th class="sorting" rowspan="1" colspan="1" style="width: 209px;">Description</th>
                            <th class="sorting" rowspan="1" colspan="1" style="width: 209px;">Brand</th>
                            <th class="sorting" rowspan="1" colspan="1" style="width: 209px;">Subcategory</th>
                            <th class="sorting" rowspan="1" colspan="1" style="width: 209px;">Category</th>
                            <th colspan="3"></th>
                          </tr>
                        </thead>

                        <tbody>
                          <% @products.each do |product| %>
                            <tr>
                              <td><%= product.title %></td>
                              <td><%= product.photo %></td>
                              <td><%= number_to_currency product.price %></td>
                              <td><%= product.kind %></td>
                              <td><%= product.description %></td>
                              <td><%= product.brand %></td>
                              <td><%= product.subcategory %></td>
                              <td><%= product.category %></td>
                            <% if current_user %>
                              <td class="actions"><%= link_to '<i class="fa fa-image"></i>'.html_safe, product %></td>
                              <td><%= link_to '<i class="fa fa-pencil"></i>'.html_safe, edit_product_path(product) %></td>
                              <td><%= link_to '<i class="fa fa-trash-o"></i>'.html_safe, product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                              <% end %>
                            </tr>
                          <% end %>
                        </tbody>
                      </table>
               </div>
            </div>
         </div>
      </div>
   </div>
   <!-- end: page -->
</div>